<nav class="navbar" role="navigation">       
  <div class="navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      {% for page in pages.children.visible %}
        {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
        <li class="{{ page.title }}">
          <a href="{{ page.url }}">{{ page.menu }}</a>
          {% if page.children is not empty %}
              <ul class="submenu">
                <div class="carreblanc"></div>
              {% for child in page.children %}
                    <li class="{{ current_page }} {{child.title |replace({' ': '',}) |replace({'&': '',}) |replace({'&': '',})}}"><a href="{{ child.url }}" data-title="{{child.title |replace({' ': '',}) |replace({'&': '',}) |replace({'+': '',})}}">{{ child.menu }}</a></li>
              {% endfor %}
              </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>